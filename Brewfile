# get brew cask for apps
tap 'caskroom/cask'
tap 'caskroom/versions'
tap 'sanemat/font'

# install the apps
cask 'java' unless system "/usr/libexec/java_home --failfast"
cask 'firefox'

# install scripts
brew 'wget'
brew 'rbenv'
brew 'ruby-build'
brew 'mysql'
brew 'ricty'
brew 'zsh-completions'
brew 'zsh-autosuggestions'
brew 'zsh-history-substring-search'
brew 'git'
brew 'phantomjs'
brew 'embulk'
brew 'digdag'

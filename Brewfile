# get brew cask for apps
tap 'caskroom/cask'
tap 'sanemat/font'

# install the apps
cask 'java' unless system "/usr/libexec/java_home --failfast"

# install scripts
brew 'wget'
brew 'rbenv'
brew 'mysql'
brew 'gradle'
brew 'node'
brew 'yarn'
brew 'fontforge', args: ['use-gcc', 'without-python']
brew 'ricty'
